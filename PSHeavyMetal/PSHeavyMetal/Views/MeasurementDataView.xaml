<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PSHeavyMetal.Forms.Views.MeasurementDataView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:PSHeavyMetal.Forms.Behaviors"
    xmlns:local="clr-namespace:PSHeavyMetal.Forms.Converters"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    xmlns:views="clr-namespace:PSHeavyMetal.Forms.Views"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:DataType="viewmodels:MeasurementDataViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ByteArrayToImageSourceConverter x:Key="ByteArrayToImage" />
            <local:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <behaviors:OnAppearingBehavior OnAppearingCommand="{Binding OnPageAppearingCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            IsVisible="{Binding IsCreatingReport}"
            Spacing="50"
            VerticalOptions="CenterAndExpand">
            <Label Style="{StaticResource MediumTextStyle}" Text="{xct:Translate CreatingReport}" />
            <ActivityIndicator
                HeightRequest="100"
                IsRunning="True"
                WidthRequest="100"
                Color="White" />
        </StackLayout>
        <StackLayout IsVisible="{Binding IsCreatingReport, Converter={StaticResource InverseBoolConverter}}">
            <StackLayout Spacing="0" VerticalOptions="CenterAndExpand">
                <Label
                    Style="{StaticResource SmallTextStyle}"
                    Text="{xct:Translate ResultFor}"
                    VerticalOptions="Start" />
                <Label Style="{StaticResource SmallTextStyle}" Text="{Binding LoadedMeasurement.Name}" />

                <Label
                    Margin="0,30,0,0"
                    Style="{StaticResource SmallTextStyle}"
                    Text="{xct:Translate Found}"
                    VerticalOptions="EndAndExpand" />
                <Label FontAttributes="Bold" Style="{StaticResource MediumTextStyle}">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="LoadedMeasurement.Concentration" />
                            <Binding Path="LoadedMeasurement.Configuration.ConcentrationUnit" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
            </StackLayout>
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Spacing="10"
                VerticalOptions="StartAndExpand">
                <Button
                    Command="{Binding TakePhotoCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate AddPhoto}"
                    WidthRequest="200" />
                <CollectionView
                    HeightRequest="75"
                    HorizontalOptions="Center"
                    ItemsLayout="HorizontalList"
                    ItemsSource="{Binding MeasurementPhotos}"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!--<ffimageloading:CachedImage
                                Margin="5"
                                HeightRequest="50"
                                Source="{Binding}"
                                WidthRequest="50" />-->
                            <Grid>
                                <ImageButton
                                    Margin="5"
                                    BackgroundColor="Purple"
                                    Command="{Binding Source={RelativeSource AncestorType={Type viewmodels:MeasurementDataViewModel}}, Path=OnPhotoSelected}"
                                    CommandParameter="{Binding}"
                                    HeightRequest="50"
                                    Source="{Binding}"
                                    WidthRequest="50" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button
                    Command="{Binding ShareMeasurementCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate ShareReport}"
                    WidthRequest="200" />
                <Button
                    Command="{Binding ShowPlotCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate ShowPlot}"
                    WidthRequest="200" />
                <Button
                    HorizontalOptions="Center"
                    Text="{xct:Translate Back}"
                    WidthRequest="200" />
            </StackLayout>
        </StackLayout>

        <ContentView VerticalOptions="End">
            <views:StatusBarView />
        </ContentView>
    </Grid>
</ContentPage>