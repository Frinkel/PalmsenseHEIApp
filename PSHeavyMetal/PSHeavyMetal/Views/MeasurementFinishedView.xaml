<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PSHeavyMetal.Forms.Views.MeasurementFinishedView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:local="clr-namespace:PSHeavyMetal.Forms.Converters"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    xmlns:views="clr-namespace:PSHeavyMetal.Forms.Views"
    x:DataType="viewmodels:MeasurementFinishedViewModel"
    NavigationPage.HasBackButton="False"
    Style="{StaticResource CustomPage}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            IsVisible="{Binding IsCreatingReport}"
            Spacing="50"
            VerticalOptions="CenterAndExpand">
            <Label Style="{StaticResource MediumTextStyle}" Text="{xct:Translate CreatingReport}" />
            <ActivityIndicator
                HeightRequest="100"
                IsRunning="True"
                WidthRequest="100"
                Color="White" />
        </StackLayout>
        <StackLayout IsVisible="{Binding IsCreatingReport, Converter={StaticResource InverseBoolConverter}}">
            <StackLayout Spacing="0" VerticalOptions="CenterAndExpand">
                <Label
                    Style="{StaticResource SmallTextStyle}"
                    Text="{xct:Translate ResultFor}"
                    VerticalOptions="Start" />
                <Label Style="{StaticResource SmallTextStyle}" Text="{Binding ActiveMeasurement.Name}" />

                <Label
                    Margin="0,30,0,0"
                    Style="{StaticResource SmallTextStyle}"
                    Text="{xct:Translate Found}"
                    VerticalOptions="EndAndExpand" />
                <Label FontAttributes="Bold" Style="{StaticResource MediumTextStyle}">
                    <Label.Text>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="ActiveMeasurement.Concentration" />
                            <Binding Path="ActiveMeasurement.Configuration.ConcentrationUnit" />
                        </MultiBinding>
                    </Label.Text>
                </Label>
            </StackLayout>
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Spacing="10"
                VerticalOptions="StartAndExpand">
                <Button
                    Command="{Binding TakePhotoCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate AddPhoto}"
                    WidthRequest="200" />
                <CollectionView
                    HeightRequest="75"
                    HorizontalOptions="Center"
                    ItemsLayout="HorizontalList"
                    ItemsSource="{Binding MeasurementPhotos}"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <ImageButton
                                    Margin="5"
                                    Command="{Binding Source={RelativeSource AncestorType={Type viewmodels:MeasurementDataViewModel}}, Path=OnPhotoSelected}"
                                    CommandParameter="{Binding}"
                                    HeightRequest="50"
                                    Source="{Binding}"
                                    WidthRequest="50" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button
                    HorizontalOptions="Center"
                    Text="{xct:Translate ShareReport}"
                    WidthRequest="200" />
                <Button
                    Command="{Binding ShowPlotCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate ShowPlot}"
                    WidthRequest="200" />
                <Button
                    Command="{Binding RepeatMeasurementCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate Repeat}"
                    WidthRequest="200" />
                <Button
                    Command="{Binding NavigateToHomeCommand}"
                    HorizontalOptions="Center"
                    Text="{xct:Translate Home}"
                    WidthRequest="200" />
            </StackLayout>
        </StackLayout>

        <ContentView VerticalOptions="End">
            <views:StatusBarView />
        </ContentView>
    </Grid>
</ContentPage>