<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PSHeavyMetal.Forms.Views.TitleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    x:DataType="viewmodels:TitleViewModel"
    Visual="Material">
    <ContentView.Content>
        <Grid>
            <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">
                <Label
                    Margin="0,0,20,0"
                    FontSize="22"
                    LineBreakMode="NoWrap"
                    Text="PS HeavyMetal" />
                <Image
                    HeightRequest="30"
                    Source="usericon.png"
                    WidthRequest="30" />
                <Label
                    Margin="0,0,20,0"
                    LineBreakMode="TailTruncation"
                    Text="{Binding ActiveUserName}"
                    VerticalTextAlignment="Center"
                    WidthRequest="40" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>