<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="PSHeavyMetal.Forms.Views.TitleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    x:DataType="viewmodels:TitleViewModel"
    Visual="Material">
    <ContentView.Content>
        <Grid>
            <AbsoluteLayout
                Margin="10,0,0,0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand">
                <Label Margin="-60,0,0,0" Text="PS Heavy Metal" />
            </AbsoluteLayout>
            <StackLayout HorizontalOptions="End" Orientation="Horizontal">
                <Image
                    HeightRequest="40"
                    Source="usericon.png"
                    WidthRequest="40" />
                <Label
                    Margin="0,0,20,0"
                    Text="{Binding ActiveUserName}"
                    VerticalTextAlignment="Center" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>