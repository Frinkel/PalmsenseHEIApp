<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="PSHeavyMetal.Forms.Views.SensorDetectionPopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="http://xamarin.com/schemas/2020/toolkit"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    x:DataType="viewmodels:SensorDetectionViewModel">

    <StackLayout
        HorizontalOptions="CenterAndExpand"
        Spacing="30"
        VerticalOptions="CenterAndExpand">
        <Label
            Margin="0,50,0,0"
            Style="{StaticResource SmallTextStyle}"
            Text="Insert sensor and wait for indicator to turn BLUE"
            WidthRequest="300" />
        <extensions:MediaElement
            AutoPlay="True"
            BackgroundColor="Transparent"
            HeightRequest="250"
            IsLooping="True"
            ShowsPlaybackControls="False"
            Source="ms-appx:///InsertSensor.mp4"
            WidthRequest="250" />
        <Button
            Command="{Binding ContinueCommand}"
            HorizontalOptions="Center"
            Text="Continue"
            WidthRequest="200" />
        <Button
            Command="{Binding CancelCommand}"
            HorizontalOptions="Center"
            Text="Cancel"
            WidthRequest="200" />
    </StackLayout>
</pages:PopupPage>