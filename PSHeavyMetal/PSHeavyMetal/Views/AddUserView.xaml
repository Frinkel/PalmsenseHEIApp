<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PSHeavyMetal.Forms.Views.AddUserView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    x:DataType="viewmodels:AddUserViewModel"
    Style="{StaticResource CustomPage}"
    Visual="Material">

    <ContentPage.Content>
        <Grid>
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Orientation="Vertical"
                VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Enter a user name" Text="{Binding UserName}" />
            </StackLayout>
            <StackLayout
                Margin="0,0,0,75"
                HorizontalOptions="CenterAndExpand"
                Spacing="20"
                VerticalOptions="EndAndExpand">
                <Button Command="{Binding AddUserCommand}" Text="Add user" />
                <Button Command="{Binding CancelCommand}" Text="Cancel" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>