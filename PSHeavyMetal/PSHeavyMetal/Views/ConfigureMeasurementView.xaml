<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PSHeavyMetal.Forms.Views.ConfigureMeasurementView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PSHeavyMetal.Forms.ViewModels"
    xmlns:views="clr-namespace:PSHeavyMetal.Forms.Views"
    x:DataType="viewmodels:ConfigureMeasurementViewModel"
    Style="{StaticResource CustomPage}">
    <Grid>
        <StackLayout>
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Spacing="30"
                VerticalOptions="CenterAndExpand">
                <Label Style="{StaticResource SmallTextStyle}" Text="Select analyte:" />
                <StackLayout
                    HorizontalOptions="CenterAndExpand"
                    Spacing="20"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="200">
                    <Button Command="{Binding SetPbConfigurationCommand}" Text="Pb" />
                    <Button IsEnabled="False" Text="Cu" />
                    <Button IsEnabled="False" Text="Cd" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
        <ContentView VerticalOptions="End">
            <views:StatusBarView />
        </ContentView>
    </Grid>
</ContentPage>